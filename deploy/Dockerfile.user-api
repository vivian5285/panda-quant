FROM node:18-alpine

WORKDIR /app/user-api

# 复制package.json和package-lock.json
COPY user-api/package*.json ./

# 安装依赖
RUN npm install

# 复制源代码
COPY user-api/ .

# 编译TypeScript代码
RUN npm run build

# 设置环境变量
ENV NODE_ENV=production
ENV PORT=3002

# 暴露端口
EXPOSE 3002

# 启动命令
CMD ["node", "dist/index.js"] 