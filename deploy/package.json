{
  "name": "panda-quant-deploy",
  "version": "1.0.0",
  "description": "Deployment package for Panda Quant",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "nodemon src/index.ts",
    "deploy:api": "cd ../user-api && npm run build && npm run start",
    "deploy:ui": "cd ../user-ui && npm run build && npm run start",
    "deploy:all": "npm run deploy:api & npm run deploy:ui",
    "monitor": "node dist/monitor.js",
    "backup": "node dist/backup.js"
  },
  "dependencies": {
    "@prisma/client": "^5.10.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "ethers": "^6.11.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.1",
    "tronweb": "^5.3.0",
    "web3": "^4.5.0",
    "zod": "^3.22.4",
    "pm2": "^5.3.1",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.2",
    "express-rate-limit": "^6.7.0",
    "winston": "^3.8.2",
    "redis": "^4.6.6",
    "prom-client": "^14.2.0",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.9",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "systeminformation": "^5.21.24"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.16",
    "@types/jsonwebtoken": "^9.0.5",
    "nodemon": "^3.0.3",
    "prisma": "^5.10.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "@types/express-rate-limit": "^6.0.2",
    "@types/bcryptjs": "^2.4.2",
    "jest": "^29.5.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "@types/nodemailer": "^6.4.14",
    "@types/systeminformation": "^5.21.0"
  }
} 