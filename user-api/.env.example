# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/panda-quant

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@example.com

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Admin API Configuration
ADMIN_API_URL=http://localhost:3001/api
ADMIN_API_KEY=your-secret-api-key-here

# Blockchain Node Configuration
OP_RPC_URL=https://optimism-mainnet.infura.io/v3/your-infura-key
OP_CONTRACT_ADDRESS=0xYourContractAddress

MATIC_RPC_URL=https://polygon-mainnet.infura.io/v3/your-infura-key
MATIC_CONTRACT_ADDRESS=0xYourContractAddress

BSC_RPC_URL=https://bsc-dataseed.binance.org
BSC_CONTRACT_ADDRESS=0xYourContractAddress

ARB_RPC_URL=https://arbitrum-mainnet.infura.io/v3/your-infura-key
ARB_CONTRACT_ADDRESS=0xYourContractAddress

TRX_RPC_URL=https://api.trongrid.io
TRX_CONTRACT_ADDRESS=0xYourContractAddress
TRON_API_KEY=your-tron-api-key-here 